<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
	
	<definition name="loginLayout" template="/page/common/loginlayout.jsp">
		<put-attribute name="head" value="/page/common/header.jsp" />
		<put-attribute name="css" value="/page/common/css.jsp" />
		<put-attribute name="body" value="" />
		<put-attribute name="javascript" value="/page/common/javascript.jsp" />
		<put-attribute name="footer" value="/page/common/footer.jsp" />
	</definition>
	
	<definition name="baselayout" extends="loginLayout" template="/page/common/baselayout.jsp">
		<put-attribute name="nav" value="/page/common/nav.jsp" />
	</definition>
	
	<definition name="login" extends="loginLayout">
		<put-attribute name="body" value="/login.jsp" />
	</definition>
	
	<definition name="index" extends="baselayout">
		<put-attribute name="body" value="/page/index.jsp" />
	</definition>
	
	<definition name="visit" extends="baselayout">
		<put-attribute name="body" value="/page/visit.jsp" />
	</definition>
	
</tiles-definitions> 